@model IEnumerable<TinyEditorDemo.Models.Article>

@{
    ViewData["Title"] = "Articles";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h3 class="fw-semibold mb-0">📚 Articles</h3>
            <small class="text-muted">
                Manage and publish your articles
            </small>
        </div>

        <a asp-action="Create" class="btn btn-primary">
            ➕ Add New Article
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No articles found. Click <strong>Add New Article</strong> to create one.
        </div>
    }
    else
    {

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">

                        <div class="card-body d-flex flex-column">

                            <h5 class="card-title fw-semibold">
                                @item.Title
                            </h5>

                            <div class="text-muted small mb-3 article-preview">
                                @Html.Raw(
                                item.HtmlContent.Length > 200
                                ? item.HtmlContent.Substring(0, 200) + "..."
                                : item.HtmlContent
                                                )
                    </div>

                    <div class="mt-auto d-flex justify-content-between align-items-center">
                       

                        
                        <small class="text-muted">
                            🕒 @item.CreatedAt.ToString("dd MMM yyyy")
                        </small>
                    </div>
                </div>

            </div>
        </div>
                }
        </div>
    }
</div>

<style>
    .article-preview {
        overflow: hidden;
        max-height: 90px;
    }
</style>
